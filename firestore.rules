rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    // Onboarding answers, one doc per user: users_onboarding/{uid}
    match /users_onboarding/{uid} {
      allow read, create, update: if signedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    // (Optional) if you also write a profile doc: users/{uid}
    match /users/{uid} {
      allow read, create, update: if signedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    // Add more collections as you build them, e.g. tenants, uploads, etc.
    // Keep them locked until you need them.
  }
}